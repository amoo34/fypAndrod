<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DCMIimages">


    <RelativeLayout
        android:id="@+id/DPbuttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >

        <Button
            android:id="@+id/newImages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload New Picture"
            android:paddingRight="60dp"
            android:paddingLeft="20dp"
            android:layout_marginRight="30dp"
            android:onClick="uploadImage"
            android:background="@drawable/btndesign1"
            ></Button>





    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RVimagesCenter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/DPbuttons"/>



</RelativeLayout>