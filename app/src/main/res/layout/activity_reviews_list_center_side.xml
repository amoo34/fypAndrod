<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kidsJoy.ReviewsListCenterSide">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:background="@drawable/background_adjust_availability">


        <TextView
            android:id="@+id/ratingText01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="OverAll Rating:"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ratingA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ratingText01"
            android:paddingTop="5dp"
            android:textColor="@color/white"

            android:paddingRight="0dp"
            android:text="3.78"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ratingText11"
            android:layout_width="wrap_content"

            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ratingA"
            android:paddingTop="5dp"
            android:paddingRight="0dp"
            android:text="/5"
            android:textSize="20dp" />


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RV_reviewListCS"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>
