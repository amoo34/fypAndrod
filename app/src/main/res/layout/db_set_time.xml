<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Set Booking Date And Time"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:text="DATE"
        android:textSize="22sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


    <ImageButton
        android:layout_marginTop="8dp"
        android:id="@+id/callenderButtonDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_date_range_black_24dp"
        android:layout_marginRight="5dp"
        />


    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/bookingDateDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00/00/0000"
        android:textSize="18sp"
        android:paddingRight="7dp"
        android:paddingLeft="7dp"
        android:layout_toRightOf="@id/callenderButtonDB"
        android:background="@drawable/date_tv_border"
        />

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:text="TIMING"
        android:textSize="22sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >


        <ImageButton

            android:id="@+id/SclockButtonDB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_access_time_black_24dp"
            android:layout_marginRight="5dp"
            />



        <TextView
            android:id="@+id/bookingStartTimeDB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="18sp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:layout_toRightOf="@+id/SclockButtonDB"
            android:background="@drawable/date_tv_border"
            />



        <TextView
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/textToDB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/bookingStartTimeDB"
            android:text="TO"/>


        <ImageButton

            android:id="@+id/EclockButtonDB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_access_time_black_24dp"
            android:layout_toRightOf="@+id/textToDB"
            android:layout_marginRight="5dp"
            />




        <TextView
            android:id="@+id/bookingEndTimeDB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="18sp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:background="@drawable/date_tv_border"
            android:layout_toRightOf="@+id/EclockButtonDB"
            />









    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:text="Cancel"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_weight="1"
            android:id="@+id/DBcancelbtn"/>

        <Button
            android:id="@+id/DBconfirmbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:text="Confirm"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_weight="1"/>

    </LinearLayout>




</LinearLayout>